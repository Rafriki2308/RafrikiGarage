{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <br>
    <h1>User index</h1>
    <br>
    <div  class="table-responsive">
        <table class="table">
            <thead>
                <tr>
                    <th>Nombre Usuario</th>
                    <th>Email</th>
                    <th>Cargo</th>
                    <th style="horiz-align: center"><img id="tools" src="/assets/tools3.jpg"/></th>
                </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.username }}</td>
                    <td>{{ user.email }}</td>
                    <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                    <td>
                        <a href="{{ path('app_user_show', {'id': user.id}) }}">Detalle</a>
                        <br>
                        <a href="{{ path('app_user_edit', {'id': user.id}) }}">Editar</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

        <a href="{{ path('app_register') }}">
            <button type="button">Crear Nuevo Usuario</button>
        </a>
{% endblock %}
