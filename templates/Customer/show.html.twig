            <tr>
                <td>{{ car.regPlate }}</td>
                <td></td>
                <td>{{ car.chasisNum }}</td>
                <td></td>
                <td>{{ car.brand }}</td>
                <td></td>
                <td>{{ car.model }}</td>
                <td></td>
                <td>{{ car.engineType }}</td>
                <td></td>
                <td>
                    <a href="{{ path('app_car_show', {'id': car.id}) }}">show</a>
