    <h1>Customer</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Name</th>
                <td>{{ customer.name }}</td>
            </tr>
            <tr>
                <th>Surnames</th>
                <td>{{ customer.surnames }}</td>
            </tr>
            <tr>
                <th>IdCard</th>
                <td>{{ customer.idCard }}</td>
            </tr>
            <tr>
